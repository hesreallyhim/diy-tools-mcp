{
  "name": "diy-tools-mcp",
  "version": "1.2.3",
  "description": "MCP server that allows users to dynamically add custom tools/functions at runtime",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "diy-tools-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsc && copyfiles examples/**/* dist/resources/",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist coverage *.tsbuildinfo",
    "clean:all": "npm run clean && rm -rf node_modules functions function-code test-*",
    "inspect": "npm run build && npx -y @modelcontextprotocol/inspector@latest node dist/index.js",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --runInBand",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:unit": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathIgnorePatterns=integration",
    "test:integration": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathPattern=integration",
    "typecheck": "tsc --noEmit",
    "demo": "tsx demo.ts",
    "lint": "eslint 'src/**/*.ts' 'demo.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'demo.ts' --fix",
    "format": "prettier --write 'src/**/*.ts' 'demo.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'demo.ts'",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "prepare": "husky",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release:patch": "npm run version:patch && npm run release:do",
    "release:minor": "npm run version:minor && npm run release:do",
    "release:major": "npm run version:major && npm run release:do",
    "release:do": "node scripts/release.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hesreallyhim/diy-tools-mcp.git"
  },
  "homepage": "https://github.com/hesreallyhim/diy-tools-mcp#readme",
  "bugs": {
    "url": "https://github.com/hesreallyhim/diy-tools-mcp/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "tools",
    "functions",
    "dynamic"
  ],
  "author": "Really Him",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0",
    "ajv": "^8.17.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^25.0.2",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "demo.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
